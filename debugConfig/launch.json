{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--experimental-strip-types",
        "src/index.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Server (Watch Mode)",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--experimental-strip-types",
        "--watch",
        "src/index.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
